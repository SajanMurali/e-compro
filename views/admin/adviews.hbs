<section>
    <div class='container'>
        <div class="mt-4">
            <a href="/admin/add-Product" class="btn btn-info ml-auto ">Add Product</a>
        </div>



        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">NO</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Discription</th>
                    <td>Image</td>
                </tr>
            </thead>


            <tbody>
                {{#each Products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Discription}}</td>
                    <td><img style="width:50px;height:50px" src="{{this.Image}}" alt=""></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>